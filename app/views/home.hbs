<h1>Play A Game</h1>

<div class="row">
    <div class="column">
    <h2>Team List </h2>
    <ul>
        {{#each teams}}
            <li>
            {{this.id}} {{this.name}}
            <button class="pick_home_button" data-id="{{id}}">Home Team</button>
            <button class="pick_opp_button" data-id="{{id}}">Visiting Team</button>
        {{/each}}
    </ul>
    </div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="home_team_id">Home Team </label>
    <input type="text" id="home_team_id" name="home_team_id" >
    <label for="opp_team_id">Visiting Team </label>
    <input type="text" id="opp_team_id" name="opp_team_id" >
  </div>

  <button type="submit"class="nav_button">Game Page</button>
</form>



